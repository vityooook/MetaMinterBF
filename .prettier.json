{
  "trailingComma": "none",
  "bracketSpacing": true,
  "tabWidth": 2,
  "singleQuote": true,
  "bracketSameLine": true,
  "printWidth": 120,
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "printWidth": 200,
        "proseWrap": "never"
      }
    }
  ],
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "javascript.validate.enable": false,
  "typescript.validate.enable": false,
  "editor.formatOnSave": true,
  "prettier.semi": true
}
